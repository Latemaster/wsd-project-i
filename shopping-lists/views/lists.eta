<% layout("./layouts/layout.eta") %>

<h1>Add a List</h1>

<form method="POST" action="/lists">
  Name: <input type="text" name="name" />
  <input type="submit" value="Create List!" />
</form>

<h2>Active Lists</h2>

<ul>
<% it.lists.forEach((list) => { %>
 <li>
    <a href="/lists/<%= list.id %>"><%= list.name %></a>
  </li>
  
<% }); %>
</ul>